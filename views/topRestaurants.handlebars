<h1>人氣餐廳</h1>
<hr>
<div class="colum">
  {{#each restaurants}}
    <div class="card mb-3 mx-auto" style="max-width: 540px;">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="{{this.image}}" class="card-img h-100">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <span class="badge badge-secondary">收藏數：{{this.FavoritedCount}}</span>
            <p class="card-text">{{this.description}}</p>
            {{#if this.isFavorited}}
              <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
                <a class="btn btn-primary" href="/restaurants/{{this.id}}">Show</a>
                <button type="submit" class="btn btn-danger">移除最愛</button>
              </form>
            {{else}}
              <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
                <a class="btn btn-primary" href="/restaurants/{{this.id}}">Show</a>
                <button type="submit" class="btn btn-primary">加到最愛</button>
              </form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>